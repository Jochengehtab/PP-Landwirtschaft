<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SynthetischerKraftstoff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sk1"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/synthetischer_kraftstoff1" />

            <TextView
                android:id="@+id/sk2"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/synthetischer_kraftstoff5"/>

            <TextView
                android:id="@+id/sk4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/synthetischer_kraftstoff2"/>

            <TextView
                android:id="@+id/sk3"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/synthetischer_kraftstoff6"/>

            <TextView
                android:id="@+id/sk5"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/synthetischer_kraftstoff3"/>

            <TextView
                android:id="@+id/amogyconnector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amogy"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>